<?xml version="1.0"?>
<ruleset name="Inertia Coding Standards">
    <description>PHPCS ruleset for Inertia plugin</description>

    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <!-- Use short array syntax -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- No trailing whitespace -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace"/>

    <!-- function opening brace on the same line -->
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration.OpenBraceSameLine"/>


    <exclude-pattern>node_modules/**</exclude-pattern>
    <exclude-pattern>build/**</exclude-pattern>
</ruleset>